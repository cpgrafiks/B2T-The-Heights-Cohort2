<!DOCTYPE html>
<html>
	<head>
		<title>LARGEST NUMBER ASSIGNMENT/title>
	</head>

	<body>

		<h1 id="text"></h1>

		<script type="text/javascript">

			//create variables for the 3 numbers
			//if x is larger than x2 and x3 than it is larger
			//if x2 is larger than x1 and x3 than it is larger
			//if x3 is larger than x 2 or x1

			
			var x1 = parseInt(prompt('Enter a number:'));
			var x2 = parseInt(prompt('Enter a 2nd number:'));
			var x3 = parseInt(prompt('Enter a 3rd number:'));


			if(x1 > x2 && x1 > x3){
				console.log(x1 + ' is the largest number');
				document.getElementById('text').innerHTML = x1 + ' is the largest number';
			}
			else if(x2 > x3){
				console.log(x2 + ' is the lasrgest number');
				document.getElementById('text').innerHTML = x2 + ' is the largest number';
			}
			else{
				console.log(x3 + ' is the largest number');
				document.getElementById('text').innerHTML = x3 + ' is the largest number';
			}
		


		</script>



	</body>
</html>